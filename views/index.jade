  body

block content
  script.
    function calculateHash () {
      let blockhash = document.getElementById("blockhash").value;
      let prevhash = document.getElementById("prevhash").value;
      let blockheight = document.getElementById("blockheight").value;
      let nonce = document.getElementById("nonce").value;
      let minerid = document.getElementById("minerid").value;

      hashString = blockhash + prevhash + blockhash + nonce + minerid;
      let answer = sha256(hashString);
      console.log(typeof(answer));
      console.log(answer);
      document.getElementById("answerblock").innerHTML = " hash answer = " + answer;
    }
  div.row.container
    form.col.s12
      div.input-field.s6
        input.validate(id="blockhash" name="blockhash" type="text")
        label(for="blockhash") Blockhash
      div.input-field.s6
        input.validate(id="prevhash" name="prevhash" type="text")
        label(for="prevhash") Prevhash
      div.input-field.s6
        input.validate(id="blockheight" name="blockheight" type="text")
        label(for="blockheight") Blockheight
      div.input-field.s6
        input.validate(id="nonce" name="nonce" type="text")
        label(for="nonce") nonce
      div.input-field.s6
        input.validate(id="minerid" name="minerid" type="text")
        label(for="minerid") MinerId
      div.center
        button.btn.waves-effect.waves-light(type="button" onclick="calculateHash()") Calculate hash
      div.row.center
        h5 hash answer =
        h5(id="answerblock") nothing yet
      
